/*For 50px Avatars*/

.forumPost article .content:not(.nodark){
    padding-left: 80px ! important;
}

.forumPost .replies .content:not(.nodark){
    padding-left: 55px ! important;
}

.forumPost .avatar:not(.nodark){
    left: 50px !important;
    top: 15px !important;
}

.post.subtopic .avatar:not(.nodark){
    left: 25px !important;
    top: 15px !important;
}

.replies .avatar:not(.nodark){
    left: 25px !important;
    top: 15px !important;
}

.topics .avatar:not(.nodark){
    left: 10px !important;
    top: 7px !important;
}

.topics .avatar:not(.nodark),
.topics .avatar > img:not(.nodark){
    box-shadow: none !important;
    width: 50px !important;
    height: 50px !important;
}

.post .avatar:not(.nodark),
.post .avatar img:not(.nodark){
    box-shadow: none !important;
    width: 50px !important;
    height: 50px !important;
}

.feed .avatar:not(.nodark){
    top: -6px !important;
}

.forumPost .arrow a:not(.nodark){
    right: 4px ! important;
}

.forumPost .arrow:not(.nodark){
    left: -22px ! important;
}

.forumPost .questionAnswer > article > .post:not(.nodark){
    margin-left: 0px ! important;
}

